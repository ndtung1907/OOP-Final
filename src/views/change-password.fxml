<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ChangePasswordController">
    <children>
        <Label text="Đổi Mật Khẩu" layoutX="14.0" layoutY="14.0" />
        <Label text="Mật khẩu mới:" layoutX="14.0" layoutY="50.0" />
        <PasswordField fx:id="newPasswordField" layoutX="140.0" layoutY="46.0" promptText="Mật khẩu mới" />
        
        <Label text="Xác nhận mật khẩu:" layoutX="14.0" layoutY="100.0" />
        <PasswordField fx:id="confirmPasswordField" layoutX="140.0" layoutY="96.0" promptText="Xác nhận mật khẩu" />
        
        <Button text="Đổi mật khẩu" layoutX="140.0" layoutY="150.0" onAction="#handleChangePassword"/>
        <Button text="Hủy" layoutX="250.0" layoutY="150.0" onAction="#handleCancel"/>
    </children>
</AnchorPane>
